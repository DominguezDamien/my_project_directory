{% extends 'base.html.twig' %}

{% block title %}Petit Coup De Main - Connexion {% endblock %}

{% block body %}
    <div class="container">
        <h1 classe=" mt-4"> Formulaire de connexion </h1>

        {% if error %}


            <div class="alert alert-dismissible alert-danger">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <strong>Oh snap!</strong>

                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            </div>

        {% endif %}

        <form action="{{ path('security.login') }}" method = "post">
            <div class="form-group">
                <label for="username" class="form-label mt-4">Adresse email</label>
                <input type="email" class="form-control" id="username" name="_username"  value="{{ last_email }}"  placeholder="Entrer email">

            </div>
            <div class="form-group">
                <label for="password" class="form-label mt-4">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="_password" placeholder="Entrer mot de passe" autocomplete="off">
            </div>

            <button type="submit" class="btn btn-primary mt-4">
                Se connecter
            </button>




        </form>

    </div>
{% endblock %}
